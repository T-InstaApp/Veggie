<resources>
    <!-- Base application theme. -->

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background"/>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyTheme" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="EditText.Grey" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/grey_40</item>
        <item name="colorControlHighlight">@color/grey_40</item>
        <item name="colorControlNormal">@color/grey_40</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_theme_color</item>
        <item name="colorPrimaryDark">@color/main_theme_color</item>
        <item name="colorAccent">@color/main_theme_color</item>
        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="editTextpayment" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:background">@drawable/rectangle_curved_green</item>
        <item name="android:paddingLeft">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:inputType">textNoSuggestions|textFilter</item>
        <item name="android:textColorHint">@color/graye_payment</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/new_theme_blue</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">@color/new_theme_blue</item>
        <item name="android:headerBackground">@color/new_theme_blue</item>
    </style>

    <style name="roundedCornersImageView" parent="">
       <!-- <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp</item>-->
    </style>

    <style name="MyDialogTheme2" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
    </style>

</resources>