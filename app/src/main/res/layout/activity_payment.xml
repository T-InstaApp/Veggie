<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="feeDetails"
            type="com.instaapp.yashaswinifresh.network.responseModel.FreeResponse" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            tools:context=".activity.PaymentActivity">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_with_cart" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/btn_top"
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/lly_cardchange"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:visibility="visible"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/content_description"
                                android:src="@drawable/crd" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="serif"
                                android:text="@string/card"
                                android:textColor="@color/normal_text_color"
                                android:textSize="@dimen/_15sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lly_cashchange"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:visibility="visible"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/content_description"
                                android:src="@drawable/crd" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="serif"
                                android:text="@string/cash"
                                android:textColor="@color/normal_text_color"
                                android:textSize="@dimen/_15sdp" />
                        </LinearLayout>

                    </LinearLayout>

                    <!--Payment Details -->
                    <LinearLayout
                        android:id="@+id/payment_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/txt_payment_method"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@color/white"
                            android:fontFamily="@font/nunito_semibold"
                            android:gravity="center|start"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="0dp"
                            android:text="@string/payment_method"
                            android:textColor="@color/new_theme_blue"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="visible" />

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginHorizontal="@dimen/_30sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rbCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:buttonTint="@color/allinone"
                                android:checked="true"
                                android:drawablePadding="@dimen/_5sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/card"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_12sdp"
                                android:visibility="visible" />

                            <RadioButton
                                android:id="@+id/rbCash"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:buttonTint="@color/allinone"
                                android:drawablePadding="@dimen/_5sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/cash"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_12sdp"
                                android:visibility="visible" />

                        </RadioGroup>

                        <LinearLayout
                            android:id="@+id/cardDetailLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_payment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/payment"
                                android:textColor="@color/heading_color"
                                android:textSize="@dimen/_15sdp" />

                            <View
                                android:id="@+id/view"
                                android:layout_width="match_parent"
                                android:layout_height="1dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/card_holder"
                                android:textAlignment="textStart"
                                android:textColor="@color/heading_color"
                                android:textSize="@dimen/_12sdp" />

                            <EditText
                                android:id="@+id/etCardHolderName"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginHorizontal="@dimen/_8sdp"
                                android:layout_marginVertical="5dp"
                                android:autofillHints=""
                                android:background="@drawable/rounded_corner_rectangle"
                                android:digits="@string/card_name_allow_char"
                                android:drawablePadding="@dimen/_10sdp"
                                android:elevation="@dimen/_3sdp"
                                android:fontFamily="@font/nunito_regular"
                                android:hint="@string/please_enter_card_holder_name"
                                android:imeOptions="actionNext"
                                android:inputType="textCapSentences|textPersonName"
                                android:maxLength="50"
                                android:paddingHorizontal="@dimen/_5sdp"
                                android:text=""
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/hintGray"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/credit_card_no"
                                android:textAlignment="textStart"
                                android:textColor="@color/heading_color"
                                android:textSize="@dimen/_12sdp" />

                            <EditText
                                android:id="@+id/etCardNo"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginHorizontal="@dimen/_8sdp"
                                android:layout_marginVertical="5dp"
                                android:autofillHints=""
                                android:background="@drawable/rounded_corner_rectangle"
                                android:digits="0123456789"
                                android:drawableStart="@drawable/creditcard"
                                android:drawablePadding="@dimen/_10sdp"
                                android:elevation="@dimen/_3sdp"
                                android:fontFamily="@font/nunito_regular"
                                android:hint="@string/please_enter_card_no"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="20"
                                android:paddingHorizontal="@dimen/_5sdp"
                                android:text=""
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/hintGray"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/security_code"
                                android:textAlignment="textStart"
                                android:textColor="@color/heading_color"
                                android:textSize="@dimen/_12sdp" />

                            <EditText
                                android:id="@+id/etCardCVV"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginHorizontal="@dimen/_8sdp"
                                android:layout_marginVertical="5dp"
                                android:autofillHints=""
                                android:background="@drawable/rounded_corner_rectangle"
                                android:digits="0123456789"
                                android:drawableStart="@drawable/cvv"
                                android:drawablePadding="@dimen/_10sdp"
                                android:elevation="@dimen/_3sdp"
                                android:fontFamily="@font/nunito_regular"
                                android:hint="@string/please_enter_cvv"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="6"

                                android:paddingHorizontal="@dimen/_5sdp"
                                android:text=""
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/hintGray"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/exp_date"
                                android:textAlignment="textStart"
                                android:textColor="@color/heading_color"
                                android:textSize="@dimen/_12sdp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/etMonth"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginHorizontal="@dimen/_8sdp"
                                    android:layout_marginVertical="5dp"
                                    android:layout_weight="1"
                                    android:autofillHints=""
                                    android:background="@drawable/rounded_corner_rectangle"
                                    android:digits="0123456789"
                                    android:elevation="@dimen/_3sdp"
                                    android:fontFamily="@font/nunito_regular"
                                    android:hint="Month (MM)"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:maxLength="2"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:text=""
                                    android:textColor="@color/text_color"
                                    android:textColorHint="@color/hintGray"
                                    android:textSize="@dimen/_12sdp" />

                                <EditText
                                    android:id="@+id/etYear"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginHorizontal="@dimen/_8sdp"
                                    android:layout_marginVertical="5dp"
                                    android:layout_weight="1"
                                    android:autofillHints=""
                                    android:background="@drawable/rounded_corner_rectangle"
                                    android:digits="0123456789"
                                    android:elevation="@dimen/_3sdp"
                                    android:fontFamily="@font/nunito_regular"
                                    android:hint="Year (YY/YYYY)"
                                    android:imeOptions="actionDone"
                                    android:inputType="number"
                                    android:maxLength="4"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:text=""
                                    android:textColor="@color/text_color"
                                    android:textColorHint="@color/hintGray"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <!--Delivery Details-->
                    <LinearLayout
                        android:id="@+id/deliveryAddressLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/payment_details"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txtDeliveryTypeHeading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="Delivery address:"
                            android:textColor="@color/new_theme_blue"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/txtDeliveryAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/nunito_regular"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/payment_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/deliveryAddressLayout"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_extra_annotation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="@string/extra_annotation"
                            android:textColor="@color/heading_color"
                            android:textSize="@dimen/_12sdp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_extra_annotation"
                            style="@style/editText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="start"
                            android:imeOptions="actionDone"
                            android:inputType="textPersonName"
                            android:textColor="@color/normal_text_color"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_8sdp"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="@string/apply_coupon"
                            android:textAlignment="textStart"
                            android:textColor="@color/heading_color"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="visible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <EditText
                                android:id="@+id/etCouponCode"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginHorizontal="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:layout_weight="2"
                                android:autofillHints=""
                                android:background="@drawable/rounded_corner_rectangle"
                                android:digits="QWERTYUIOPLKJHGFDSAZXCVBNM0123456789"
                                android:elevation="@dimen/_3sdp"
                                android:fontFamily="@font/nunito_regular"
                                android:hint="@string/please_enter_coupon_code"
                                android:imeOptions="actionDone"
                                android:inputType="textCapCharacters"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:paddingHorizontal="@dimen/_5sdp"
                                android:text=""
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/hintGray"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnApplyCoupon"
                                android:layout_width="@dimen/_160sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:background="@drawable/rect_button_background"
                                android:fontFamily="@font/nunito_regular"
                                android:text="@string/apply_coupon"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                android:visibility="visible" />


                        </LinearLayout>


                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/_20sdp">

                            <TextView
                                android:id="@+id/subtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/subtotal"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/txt_subtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:fontFamily="@font/nunito_regular"
                                android:textColor="@color/normal_text_color"
                                android:textSize="@dimen/_12sdp"
                                app:setPriceWithCurrency="@{feeDetails.sub_total}"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/tax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_subtotal"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/tax"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/txt_tax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_subtotal"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:fontFamily="@font/nunito_regular"
                                android:textColor="@color/normal_text_color"
                                android:textSize="@dimen/_12sdp"
                                app:setPriceWithCurrency="@{feeDetails.tax}" />

                            <TextView
                                android:id="@+id/vat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_tax"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/delivery_fee"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/txt_vat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_tax"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:fontFamily="@font/nunito_regular"
                                android:textColor="@color/normal_text_color"
                                android:textSize="@dimen/_12sdp"
                                app:setPriceWithCurrency="@{feeDetails.shipping_fee}" />


                            <LinearLayout
                                android:id="@+id/discountLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_vat"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/discount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:text="@string/discount"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/txt_discount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:fontFamily="@font/nunito_regular"
                                    android:gravity="end"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/normal_text_color"
                                    android:textSize="@dimen/_12sdp"
                                    android:visibility="visible"
                                    app:setPriceWithCurrency="@{feeDetails.discount}" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/service_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/discountLayout"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/service_fee"
                                android:textColor="@color/normal_text_color"
                                android:textSize="@dimen/_12sdp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/service_fee_note"
                                android:layout_width="@dimen/_14sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:layout_below="@+id/discountLayout"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_toEndOf="@id/service_fee"
                                android:contentDescription="@string/content_description"
                                android:src="@drawable/i"
                                android:visibility="gone"
                                app:tint="@color/background" />

                            <TextView
                                android:id="@+id/txt_service_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/discountLayout"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="@dimen/_50sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:fontFamily="@font/nunito_regular"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:visibility="gone" />

                            <RelativeLayout
                                android:id="@+id/xyz"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_service_fee"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@drawable/rectangle_curved_green"
                                android:padding="@dimen/_5sdp"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:text="@string/tip"
                                    android:textColor="@color/allinone"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:id="@+id/txt_tip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="@dimen/_50sdp"
                                    android:fontFamily="@font/nunito_regular"
                                    android:text=""
                                    android:textColor="@color/normal_text_color"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"
                                    tools:ignore="RelativeOverlap" />


                                <EditText
                                    android:id="@+id/txt_change_tip"
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
