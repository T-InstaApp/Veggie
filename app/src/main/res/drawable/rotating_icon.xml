<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="1"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1540">

    <shape
        android:innerRadiusRatio="2.5"
        android:shape="ring"
        android:thickness="4dp"
        android:thicknessRatio="30"
        android:useLevel="false">


        <gradient
            android:centerColor="@color/new_theme_blue"
            android:centerY="0.80"
            android:endColor="@color/new_theme_red"
            android:startColor="@color/new_theme_blue"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>